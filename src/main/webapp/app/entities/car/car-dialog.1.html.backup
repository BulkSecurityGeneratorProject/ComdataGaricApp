
<form name="editForm" role="form" novalidate ng-submit="vm.save()">
<!-- 
            vm.carTypes = ["ClassicCar", "Cabrio"];
        vm.selectedCarType = vm.carTypes[0];

-->
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                ng-click="vm.clear()">&times;</button>
        <h4 class="modal-title" id="myCarLabel">Create or edit a Car</h4>
    </div>
    <div class="modal-body">
        <jhi-alert-error></jhi-alert-error>
        <div class="form-group" ng-show="vm.car.id">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" name="id"
                    ng-model="vm.car.id" readonly />
        </div>
        <div class="form-group">
            <label class="control-label" for="field_seatsNumber">Seats Number</label>
            <input type="number" class="form-control" name="seatsNumber" id="field_seatsNumber"
                    ng-model="vm.car.seatsNumber"
                    />
        </div>

        <div class="form-group">
            <label class="control-label" for="field_carType">Select car type:</label>
            <select name="singleSelect" id="singleSelect" ng-model="vm.carType">
                <option value="">---Please select---</option> <!-- not selected / blank option -->
                <option value="{{vm.carTypes[0]}}">Classic Car</option> <!-- interpolation -->
                <option value="{{vm.carTypes[1]}}">Cabrio</option>
              </select><br>
        </div>
      

        <div class="form-group">
            <label class="control-label" for="field_seatsNumber">Seats Number</label>
            <input type="number" class="form-control" name="seatsNumber" id="field_seatsNumber"
                    ng-model="vm.car.seatsNumber"
                    />
        </div>


        <div class="form-group" ng-if="vm.carType == vm.carTypes[1]">
            <label class="control-label" for="field_hasRemovableRoof">Has Removable Roof</label>
                <input type="checkbox" name="hasRemovableRoof" id="field_hasRemovableRoof"
                          ng-model="vm.car.hasRemovableRoof"/>
        </div>

        <div class="form-group" ng-if="vm.carType == vm.carTypes[0]">
            <label class="control-label" for="field_roofTopCapacity">Roof Top Capacity</label>
            <input type="number" class="form-control" name="roofTopCapacity" id="field_roofTopCapacity"
                    ng-model="vm.car.roofTopCapacity"
                    />
        </div>

        <div class="form-group">
            <label class="control-label" for="field_hasAbs">Has ABS</label>
                <input type="checkbox" name="hasAbs" id="field_hasAbs"
                          ng-model="vm.car.hasAbs"/>
        </div>

        <div class="form-group">
            <label class="control-label" for="field_hasEsp">Has ESP</label>
                <input type="checkbox" name="hasEsp" id="field_hasEsp"
                          ng-model="vm.car.hasEsp"/>
        </div>

        <div class="form-group">
            <label class="control-label" for="field_hasGlassRoof">Has hasGlassRoof</label>
                <input type="checkbox" name="hasGlassRoof" id="field_hasGlassRoofp"
                          ng-model="vm.car.hasGlassRoof"/>
        </div>

        <div class="form-group">
            <label class="control-label" for="field_hasAluWheels">Has hasAluWheels</label>
                <input type="checkbox" name="hasAluWheels" id="field_hasAluWheels"
                          ng-model="vm.car.hasAluWheels"/>
        </div>

        <div class="form-group">
            <label class="control-label" for="field_hasAbs">Has ABS</label>
                <input type="checkbox" name="hasAbs" id="field_hasAbs"
                          ng-model="vm.car.hasAbs"/>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="vm.clear()">
            <span class="glyphicon glyphicon-ban-circle"></span>&nbsp;<span>Cancel</span>
        </button>
        <button type="submit" ng-disabled="editForm.$invalid || vm.isSaving" class="btn btn-primary">
            <span class="glyphicon glyphicon-save"></span>&nbsp;<span>Save</span>
        </button>
    </div>
</form>
